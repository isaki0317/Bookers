<h1>Books</h1>
<table>
  <div class="head">
    <div class="headline">
      <h4 class="title">Title</h4>
      <h4 class="body">Body</h4>
    </div>
  </div>
  <main>
    <% @books.each do |book| %>
    <ul class="main-li">
      <li class="main-title">
        <%= book.title %>
      </li>
      <li class="main-body">
        <%= book.body %>
      </li>
    <%= link_to "Show", book_path(book) %>
    <%= link_to "Edit", edit_book_path(book) %>
    </ul>
    <% end %>

  </main>
</table>

<h2>New book</h2>
<%= form_with model:@book, local: true do |f| %>
  <h4 class="new-title">Title</h4>
  <%= f.text_field :title %>
  <h4 class="new-body">Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



