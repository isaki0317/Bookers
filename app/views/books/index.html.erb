<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book) %>
      </td>
      <td>
        <%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
<div class="error">
  <h3>2 errors prohibited this book from being saved:</h3>
  <ul>
    <li>Title can't be blank</li>
    <li>Body can't be blank</li>
  </ul>
</div>
<% end %>

<%= form_with model:@book, local: true do |f| %>

<div class="field">
  <h4 class="new-title">Title</h4>
  <%= f.text_field :title %>
</div>
<div class="field">
  <h4 class="new-body">Body</h4>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>



