<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h3>2 errors prohibited this book from being saved:</h3>
  <ul>
    <li>Title can't be blank</li>
    <li>Body can't be blank</li>
  </ul>
</div>
<% end %>

<%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_field :body %>
  </div>
    <div class="actions">
    <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>

<% end %>